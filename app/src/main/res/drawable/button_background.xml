<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF4081" /> <!-- Background color when Button is pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners for the Button -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FF6699" /> <!-- Default background color for the Button -->
            <corners android:radius="8dp" /> <!-- Rounded corners for the Button -->
        </shape>
    </item>
</selector>
